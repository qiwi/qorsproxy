{
  "name": "qorsproxy",
  "description": "Cors proxy for Qoder/Pusher",
  "keywords": [
    "cors",
    "corsproxy",
    "qors",
    "qorsproxy"
  ],
  "version": "1.1.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:qiwi/qorsproxy.git"
  },
  "author": "Anton Golub <a.golub@qiwi.com>",
  "engines": {
    "node": ">=9.4.0 <11.0",
    "npm": ">=5.6 <7.0"
  },
  "dependencies": {
    "@qiwi/health-indicator": "^1.2.0",
    "@std/esm": "^0.26.0",
    "async-middleware": "^1.2.1",
    "basic-auth": "^2.0.0",
    "express": "^4.16.3",
    "ip": "^1.1.5",
    "jsonschema": "^1.2.4",
    "lodash-es": "^4.17.10",
    "optimist": "^0.6.1",
    "request": "^2.87.0",
    "winston": "^3.0.0",
    "winston-daily-rotate-file": "^3.2.1"
  },
  "@std/esm": {
    "mode": "all",
    "cjs": true
  },
  "main": "src/app",
  "scripts": {
    "start_pm2": "pm2 start npm --name qorsproxy -- start",
    "start": "node -r @std/esm --use_strict src/app",
    "test": "npm run mocha",
    "mocha": "nyc mocha --opts .mocha.opts && nyc report --reporter=text-lcov > ./coverage/lcov.info",
    "test_with_report": "npm test && npm run codeclimate_push && npm run coveralls_push",
    "codeclimate_push": "codeclimate-test-reporter < ./coverage/lcov.info",
    "coveralls_push": "cat ./coverage/lcov.info | coveralls"
  },
  "license": "MIT",
  "files": [
    "README.md",
    "CHANGELOG.md",
    "src/"
  ],
  "devDependencies": {
    "@semantic-release/changelog": "^2.0.2",
    "@semantic-release/git": "^6.0.0",
    "@semantic-release/github": "^4.2.17",
    "@semantic-release/npm": "^3.3.1",
    "chai": "^4.1.2",
    "chai-spies": "^1.0.0",
    "chai-subset": "^1.6.0",
    "codeclimate-test-reporter": "^0.5.0",
    "coveralls": "^3.0.1",
    "glob": "^7.1.2",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^12.0.2",
    "reqresnext": "^1.4.1",
    "semantic-release": "^15.6.0"
  },
  "release": {
    "branch": "master",
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
