{
  "name": "qorsproxy",
  "version": "2.4.11",
  "description": "HTTP(S) proxy for dev purposes",
  "main": "./src/main/js/app.js",
  "type": "module",
  "exports": {
    "import": "./src/main/js/app.js"
  },
  "bin": {
    "qorsproxy": "./src/main/js/cli.js"
  },
  "scripts": {
    "start:pm2": "pm2 start npm --name qorsproxy -- start",
    "start": "node --use_strict src/main/js/index.js",
    "test": "npm-run-all -p -l lint test:unit test:deps",
    "test:premocha": "mkdir -p .nyc_output",
    "test:mocha": "c8 mocha './src/test/js/**/*.js' && c8 report -r lcov",
    "test:unit": "yarn test:premocha && yarn test:mocha",
    "lint": "standard src/**/*.js",
    "lint:fix": "yarn lint -- --fix",
    "docs": "mkdir -p docs && cp -r README.md docs/README.md",
    "test:report": "yarn test && yarn coveralls:push",
    "test:deps": "npm-run-all -p -l test:depcheck test:depaudit",
    "test:depcheck": "npm_config_yes=true npx depcheck --ignores mocha-*",
    "test:depaudit": "yarn audit --scope=dependencies --level=moderate",
    "test:depauditfix": "npm_config_yes=true npx yarn-audit-fix",
    "coveralls:push": "cat ./coverage/lcov.info | coveralls",
    "postupdate": "yarn && yarn test:depauditfix && yarn test",
    "release": "npx -p @qiwi/semrel-toolkit semrel -e @qiwi/semrel-config",
    "publish:beta": "npm publish --no-git-tag-version --tag beta",
    "publish:rc": "npm publish --no-git-tag-version --tag rc"
  },
  "dependencies": {
    "@qiwi/health-indicator": "^1.3.3",
    "@qiwi/npm-run-all": "^4.1.7",
    "@qiwi/primitive-storage": "^1.4.6",
    "basic-auth": "^2.0.1",
    "express": "^4.17.1",
    "http-status-codes": "^2.1.4",
    "ip": "^1.1.5",
    "jsonschema": "^1.4.0",
    "lodash-es": "^4.17.21",
    "meow": "^10.1.1",
    "pkg-dir": "^5.0.0",
    "request": "^2.88.2",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "license": "MIT",
  "files": [
    "LICENSE",
    "README.md",
    "CHANGELOG.md",
    "src/main",
    "example",
    "ssl"
  ],
  "devDependencies": {
    "c8": "^7.8.0",
    "chai": "^4.3.4",
    "chai-subset": "^1.6.0",
    "coveralls": "^3.1.1",
    "dirty-chai": "^2.0.1",
    "mocha": "^9.1.0",
    "mocha-lcov-reporter": "^1.3.0",
    "mocha-sinon": "^2.1.2",
    "reqresnext": "^1.6.4",
    "sinon": "^11.1.2",
    "sinon-chai": "^3.7.0",
    "standard": "^16.0.3"
  },
  "keywords": [
    "cors",
    "corsproxy",
    "qors",
    "qorsproxy"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:qiwi/qorsproxy.git"
  },
  "author": "Anton Golub <a.golub@qiwi.com>",
  "engines": {
    "node": ">=12.12",
    "npm": ">=5.6"
  },
  "standard": {
    "ignore": [
      "src/main/js/index.js"
    ],
    "globals": [
      "it",
      "expect",
      "describe",
      "before",
      "after",
      "afterEach",
      "beforeEach",
      "sinon"
    ]
  }
}
